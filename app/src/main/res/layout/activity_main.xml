<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="40dp"
        android:textColor="#FF000000"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/stepsCounterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hurry up!"
        app:layout_constraintTop_toTopOf="@id/timerTextView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:textColor="#FF000000"
        android:textSize="35dp"/>

    <com.styudint.nepyatnashki.gameviews.GameView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/gameView"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/stepsCounterTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </com.styudint.nepyatnashki.gameviews.GameView>


</androidx.constraintlayout.widget.ConstraintLayout>